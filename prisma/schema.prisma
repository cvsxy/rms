generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── AUTHENTICATION & USERS ────────────────────────────────────

enum UserRole {
  SERVER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  name      String
  pin       String?
  email     String?  @unique
  password  String?
  role      UserRole @default(SERVER)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders            Order[]
  sessions          Session[]
  pushSubscriptions PushSubscription[]
  auditLogs         AuditLog[]
  appliedDiscounts  OrderDiscount[]
  dailyCloses       DailyClose[]

  @@index([pin])
  @@index([role])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

// ─── MENU ───────────────────────────────────────────────────────

model MenuCategory {
  id        String   @id @default(cuid())
  name      String
  nameEs    String
  sortOrder Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items MenuItem[]

  @@index([sortOrder])
}

enum ItemDestination {
  KITCHEN
  BAR
}

model MenuItem {
  id            String          @id @default(cuid())
  name          String
  nameEs        String
  description   String?
  descriptionEs String?
  price         Decimal         @db.Decimal(10, 2)
  destination   ItemDestination
  categoryId    String
  active        Boolean         @default(true)
  available     Boolean         @default(true)
  sortOrder     Int             @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  category    MenuCategory         @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  modifiers   Modifier[]
  orderItems  OrderItem[]
  ingredients MenuItemIngredient[]

  @@index([categoryId])
  @@index([destination])
  @@index([active])
}

model Modifier {
  id         String   @id @default(cuid())
  name       String
  nameEs     String
  priceAdj   Decimal  @default(0) @db.Decimal(10, 2)
  menuItemId String
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  menuItem      MenuItem           @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  orderItemMods OrderItemModifier[]

  @@index([menuItemId])
}

// ─── TABLES ─────────────────────────────────────────────────────

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
}

model RestaurantTable {
  id        String      @id @default(cuid())
  number    Int         @unique
  name      String?
  seats     Int         @default(4)
  status    TableStatus @default(AVAILABLE)
  active    Boolean     @default(true)
  posX      Float?
  posY      Float?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  orders Order[]

  @@index([status])
  @@index([number])
}

// ─── ORDERS ─────────────────────────────────────────────────────

enum OrderStatus {
  OPEN
  SUBMITTED
  COMPLETED
  CLOSED
  CANCELLED
}

model Order {
  id        String      @id @default(cuid())
  tableId   String
  serverId  String
  status    OrderStatus @default(OPEN)
  notes     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  table     RestaurantTable @relation(fields: [tableId], references: [id], onDelete: Restrict)
  server    User            @relation(fields: [serverId], references: [id], onDelete: Restrict)
  items     OrderItem[]
  payment   Payment?
  discounts OrderDiscount[]

  @@index([tableId])
  @@index([serverId])
  @@index([status])
  @@index([createdAt])
}

enum OrderItemStatus {
  PENDING
  SENT
  PREPARING
  READY
  SERVED
  CANCELLED
}

model OrderItem {
  id         String          @id @default(cuid())
  orderId    String
  menuItemId String
  quantity   Int             @default(1)
  unitPrice  Decimal         @db.Decimal(10, 2)
  notes      String?
  seatNumber Int?
  status     OrderItemStatus @default(PENDING)
  sentAt     DateTime?
  readyAt    DateTime?
  servedAt   DateTime?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  order      Order              @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem   MenuItem           @relation(fields: [menuItemId], references: [id], onDelete: Restrict)
  modifiers  OrderItemModifier[]
  voidReason String?
  voidNote   String?

  @@index([orderId])
  @@index([menuItemId])
  @@index([status])
}

model OrderItemModifier {
  id          String  @id @default(cuid())
  orderItemId String
  modifierId  String
  priceAdj    Decimal @default(0) @db.Decimal(10, 2)

  orderItem OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  modifier  Modifier  @relation(fields: [modifierId], references: [id], onDelete: Restrict)

  @@unique([orderItemId, modifierId])
  @@index([orderItemId])
}

// ─── PUSH SUBSCRIPTIONS ─────────────────────────────────────────

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String
  auth      String
  p256dh    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, endpoint])
  @@index([userId])
}

// ─── INVENTORY ──────────────────────────────────────────────────

model Ingredient {
  id                String   @id @default(cuid())
  name              String
  nameEs            String
  unit              String   // "kg", "L", "units", "g", "ml", "oz"
  currentStock      Decimal  @default(0) @db.Decimal(10, 3)
  lowStockThreshold Decimal  @default(0) @db.Decimal(10, 3)
  costPerUnit       Decimal  @default(0) @db.Decimal(10, 2)
  active            Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  menuItems MenuItemIngredient[]

  @@index([active])
}

model MenuItemIngredient {
  id           String  @id @default(cuid())
  menuItemId   String
  ingredientId String
  quantity     Decimal @db.Decimal(10, 3)

  menuItem   MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@unique([menuItemId, ingredientId])
  @@index([menuItemId])
  @@index([ingredientId])
}

// ─── SETTINGS ───────────────────────────────────────────────────

model RestaurantSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@index([key])
}

// ─── PAYMENTS ───────────────────────────────────────────────────

enum PaymentMethod {
  CASH
  CARD
}

model Payment {
  id        String        @id @default(cuid())
  orderId   String        @unique
  method    PaymentMethod
  subtotal  Decimal       @db.Decimal(10, 2)
  tax       Decimal       @db.Decimal(10, 2)
  total     Decimal       @db.Decimal(10, 2)
  tip       Decimal       @default(0) @db.Decimal(10, 2)
  discount  Decimal       @default(0) @db.Decimal(10, 2)
  createdAt DateTime      @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([createdAt])
}

// ─── DISCOUNTS ──────────────────────────────────────────────────

enum DiscountType {
  PERCENTAGE
  FIXED
}

model Discount {
  id        String       @id @default(cuid())
  name      String
  nameEs    String
  type      DiscountType
  value     Decimal      @db.Decimal(10, 2)
  code      String?      @unique
  active    Boolean      @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  orderDiscounts OrderDiscount[]

  @@index([active])
}

model OrderDiscount {
  id          String       @id @default(cuid())
  orderId     String
  discountId  String?
  type        DiscountType
  value       Decimal      @db.Decimal(10, 2)
  appliedById String
  note        String?
  createdAt   DateTime     @default(now())

  order     Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  discount  Discount? @relation(fields: [discountId], references: [id], onDelete: SetNull)
  appliedBy User      @relation(fields: [appliedById], references: [id], onDelete: Restrict)

  @@index([orderId])
}

// ─── AUDIT LOG ──────────────────────────────────────────────────

enum AuditAction {
  ITEM_VOIDED
  ORDER_CANCELLED
  PAYMENT_PROCESSED
  DISCOUNT_APPLIED
  ITEM_86D
  STOCK_ADJUSTED
  DAILY_CLOSED
}

model AuditLog {
  id          String      @id @default(cuid())
  action      AuditAction
  userId      String
  orderId     String?
  orderItemId String?
  details     Json?
  createdAt   DateTime    @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)

  @@index([action])
  @@index([userId])
  @@index([createdAt])
  @@index([orderId])
}

// ─── DAILY CLOSE ───────────────────────────────────────────────

model DailyClose {
  id            String   @id @default(cuid())
  date          DateTime @unique @db.Date
  expectedCash  Decimal  @db.Decimal(10, 2)
  actualCash    Decimal  @db.Decimal(10, 2)
  variance      Decimal  @db.Decimal(10, 2)
  cardTotal     Decimal  @db.Decimal(10, 2)
  totalRevenue  Decimal  @db.Decimal(10, 2)
  totalTax      Decimal  @db.Decimal(10, 2)
  totalTips     Decimal  @db.Decimal(10, 2)
  totalDiscount Decimal  @db.Decimal(10, 2)
  subtotal      Decimal  @db.Decimal(10, 2)
  orderCount    Int
  closedById    String
  notes         String?
  createdAt     DateTime @default(now())

  closedBy User @relation(fields: [closedById], references: [id], onDelete: Restrict)

  @@index([date])
}
